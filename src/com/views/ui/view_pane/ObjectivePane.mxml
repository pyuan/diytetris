<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="230" height="209"
	horizontalScrollPolicy="off" verticalScrollPolicy="off" clipContent="false" 
	creationComplete="init();">
	
	<mx:Script>
		<![CDATA[
		
			import mx.binding.utils.BindingUtils;
			import com.utils.ColorUtil;
			
			[Bindable]
			public var bgColor:uint = 0;
			
			[Bindable]
			public var displayTxt:String = "";
			
			private function init():void
			{
				BindingUtils.bindSetter(updateBg, this, "bgColor");
			}
			
			private function updateBg(e:uint):void
			{
				display.graphics.clear();
				display.graphics.beginFill(bgColor, 0.5);
				display.graphics.moveTo(7, 69);
				display.graphics.lineTo(210, 69);
				display.graphics.lineTo(187, 201);
				display.graphics.lineTo(7, 201);
				display.graphics.lineTo(7, 69);
				display.graphics.endFill();
				displayLabel.setStyle('color', ColorUtil.getTextOverColor(bgColor)); 
			}
			
		]]>
	</mx:Script>
	
	<mx:Canvas id="display" backgroundImage="assets/images/bg_objectives.png" width="100%" height="100%"
		verticalCenter="0" horizontalScrollPolicy="off" verticalScrollPolicy="off">
		
		<mx:TextArea id="displayLabel" text="{displayTxt}" styleName="objectiveTxt"
			backgroundAlpha="0" horizontalScrollPolicy="off" verticalScrollPolicy="off" borderThickness="0"
			width="178" height="132" x="8" y="69"/>
		
	</mx:Canvas>
	
</mx:Canvas>

