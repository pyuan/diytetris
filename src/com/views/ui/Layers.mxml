<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%"
	horizontalScrollPolicy="off" verticalScrollPolicy="off" 
	xmlns:ui="com.views.ui.*">
	
	<mx:Script>
		<![CDATA[
			
			import com.Constants;
			
			public function switchView(viewId:String):void
			{
				for(var i:int=0; i<views.numChildren; i++)
				{
					if(Canvas(views.getChildAt(i)).id == viewId){
						break;
					}
				}
				views.selectedChild = views.getChildAt(i) as Canvas;
			}
			
		]]>
	</mx:Script>
	
	<mx:Image id="backgroundImage" smoothBitmapContent="true" maintainAspectRatio="false"/>
	
	<ui:Footer id="footer"/>
	
	<mx:ViewStack id="views" width="100%" height="100%">
		<ui:Main id="main"/>
		<ui:PlayView id="play"/>
		<ui:GameOver id="gameover"/>
		<ui:StaticScreen id="credits" screenImage="{Constants.DIR_IMAGES_SCREENS + 'credits.png'}"/>
		<ui:StaticScreen id="tutorial" screenImage="{Constants.DIR_IMAGES_SCREENS + 'instructions.png'}"/>
		<ui:LeaderBoard id="leaderboard"/>
		<ui:LevelCreator id="levelCreator"/>
	</mx:ViewStack>
	
</mx:Canvas>
